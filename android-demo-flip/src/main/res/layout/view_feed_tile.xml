<?xml version="1.0" encoding="utf-8"?>
<io.nextop.rx.RxViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="140dp"
             android:background="@color/black"
        >
    <io.nextop.view.ImageView android:id="@+id/image"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|top"
            android:scaleType="centerCrop"
            android:paddingRight="1dp"
                              android:paddingBottom="1dp" />

    <TextView android:id="@+id/short_intro"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center_horizontal|bottom"
                              android:background="@color/black_semi"
                              android:textColor="@color/white_semi"
                              android:textSize="12sp"
                              android:ellipsize="end"
                              android:padding="8dp"
                              android:maxLines="2"
            />


</io.nextop.rx.RxViewGroup>
